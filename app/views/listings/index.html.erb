<% content_for :title, "Opslag" %>

<div class="page-header">
  <div>
    <h1>Opslag</h1>
    <p class="page-subtitle"> Alle jobs og projekter.</p>
  </div>
  <% if can? :create, Listing %>
    <div>
      <%= link_to "Opret opslag", new_listing_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4 market-grid">
  <% @listings.each do |listing| %>
    <% if can? :read, listing %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h5 class="card-title mb-0"><%= listing.title %></h5>
              <% if listing.status.present? %>
                <% status_class = listing.status.to_s.downcase == "open" ? "badge-status-open" : "badge-status-closed" %>
                <span class="badge-status <%= status_class %>">
                  <%= listing.status == "open" ? "Ã…ben" : "Lukket" %>
                </span>
              <% end %>
            </div>
            <p class="card-text mb-3"><%= truncate(listing.description, length: 110) %></p>
            <div class="mt-auto d-flex justify-content-between align-items-center">
              <%= link_to "Se detaljer", listing_path(listing), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
