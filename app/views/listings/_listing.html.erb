<div id="<%= dom_id listing %>">
  <!-- Header Card -->
  <div class="listing-header-card">
    <div class="d-flex align-items-center gap-3 mb-3">
      <h1 class="listing-header-title mb-0">
        <%= listing.title %>
      </h1>
    </div>
    <div class="d-flex align-items-center gap-2">
      <% if listing.status.present? %>
        <% status_class = listing.status.to_s.downcase == "open" ? "badge-status-open-header" : "badge-status-closed-header" %>
        <span class="badge-status-header <%= status_class %>">
          <span class="status-dot-header"></span>
          <span><%= listing.status == "open" ? "ÅBEN FOR BUD" : "LUKKET" %></span>
        </span>
      <% end %>
    </div>
  </div>
  

  <!-- Description Section -->
  <div class="surface-card section-card mt-4">
    <div class="section-header">
      <h2 class="section-title-with-accent">Beskrivelse</h2>
    </div>
    <div class="card-body pt-2">
      <div class="listing-description">
        <%= simple_format(listing.description.presence || "Ingen beskrivelse tilgængelig.") %>
      </div>
    </div>
  </div>
</div>

<!-- Image Section -->
  <div class="surface-card section-card mt-4">
    <div class="section-header">
      <h2 class="section-title-with-accent">Billeder</h2>
    </div>
    <%= render "images", listing: @listing %>
</div>
</div>