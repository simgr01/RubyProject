<%= render @listing %>

<% if @bids.any? %>
  <div class="mt-4">
    <h3 class="section-title">Bud</h3>
  </div>

  <% @bids.each do |bid| %>
    <div class="surface-card mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start gap-3">
          <div>
            <div class="text-muted small mb-1"><%= bid.user %></div>
            <div class="fw-semibold">
              <%= number_to_currency(bid.price, unit: "DKK") %>
            </div>
            <% if bid.message.present? %>
              <div class="card-text mt-2"><%= simple_format(bid.message) %></div>
            <% end %>
          </div>
          <div class="text-end">
            <% if bid.accepted? %>
              <span class="badge bg-success">Vindende bud</span>
            <% end %>
          </div>
        </div>

        <% if can?(:accept, bid) && @listing.open? %>
          <div class="mt-3">
            <%= button_to "Accepter bud", accept_listing_bid_path(@listing, bid), method: :post, class: "btn btn-success btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<% if can?(:create, Bid) && @listing.open? %>
  <div class="mt-4">
    <h3 class="section-title">Send bud</h3>
  </div>

  <div class="surface-card">
    <div class="card-body">
      <%= form_with model: [@listing, @bid], local: true do |f| %>
        <div class="mb-3">
          <%= f.label :price, class: "form-label" %>
          <%= f.number_field :price, step: 0.01, required: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :message, class: "form-label" %>
          <%= f.text_area :message, class: "form-control", rows: 3 %>
        </div>

        <%= f.submit "Place bid", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="mt-4 d-flex flex-wrap gap-2">
  <%= link_to "Tilbage til opslag", listings_path, class: "btn btn-light-outline" %>
  <% if can? :update, @listing %>
    <%= link_to "Rediger", edit_listing_path(@listing), class: "btn btn-light-outline" %>
  <% end %>
  <% if can? :destroy, @listing %>
    <%= button_to "Slet", @listing, method: :delete, class: "btn btn-outline-danger", form: { class: "d-inline" } %>
  <% end %>
</div>
