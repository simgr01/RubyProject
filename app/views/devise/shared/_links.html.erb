<div class="d-grid gap-2 mt-3">
  <%- if controller_name != "sessions" %>
    <%= link_to "Log ind", new_session_path(resource_name), class: "btn btn-light-outline" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != "registrations" %>
    <%= link_to "Opret konto", new_registration_path(resource_name), class: "btn btn-light-outline" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
    <%= link_to "Glemt adgangskode?", new_password_path(resource_name), class: "btn btn-light-outline" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != "confirmations" %>
    <%= link_to "Gensend bekræftelsesemail", new_confirmation_path(resource_name), class: "btn btn-light-outline" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != "unlocks" %>
    <%= link_to "Gensend oplåsningsinstruktioner", new_unlock_path(resource_name), class: "btn btn-light-outline" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Log ind med #{OmniAuth::Utils.camelize(provider)}",
                    omniauth_authorize_path(resource_name, provider),
                    data: { turbo: false },
                    class: "btn btn-light-outline" %>
    <% end %>
  <% end %>
</div>
