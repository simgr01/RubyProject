<div class="narrow-container">
  <div class="surface-card">
    <div class="card-body">
      <h1 class="mb-1" style="font-size: 1.6rem; font-weight: 650;">Opret konto</h1>
      <p class="page-subtitle mb-4">Opret en konto for at oprette opslag og bud.</p>

      <%= form_for(resource, as: resource_name, url: company_registration_path) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder: "Email" %>
        </div>

        <div class="mb-3">
            <%= f.label :company_name, "Firma navn", class: "form-label" %>
            <%= f.text_field :company_name, class: "form-control", required: true, placeholder: "Firma navn", maxlength: 255 %>
        </div>

         <div class="mb-3">
            <%= f.label :cvr_number, "CVR nummer", class: "form-label" %>r
            <%= f.text_field :cvr_number, class: "form-control", required: true, placeholder: "CVR nummer" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Adgangskode", class: "form-label" %>
          <% if @minimum_password_length %>
            <div class="text-muted small mb-1">(<%= @minimum_password_length %> tegn minimum)</div>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true, placeholder: "Adgangskode", minlength: 6 %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Bekræft adgangskode", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true, placeholder: "Bekræft adgangskode", minlength: 6 %>
        </div>

        <div class="d-grid">
          <%= f.submit "Opret konto", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
