<div class="narrow-container">
  <div class="surface-card">
    <div class="card-body">
      <h1 class="mb-1" style="font-size: 1.6rem; font-weight: 650;">Skift adgangskode</h1>
      <p class="page-subtitle mb-4">Vælg en ny adgangskode for din konto.</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="mb-3">
          <%= f.label :password, "Ny adgangskode", class: "form-label" %>
          <% if @minimum_password_length %>
            <div class="text-muted small mb-1">(<%= @minimum_password_length %> tegn minimum)</div>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Bekræft ny adgangskode", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Skift adgangskode", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
